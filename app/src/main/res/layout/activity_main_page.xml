<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<!--    tools:context=".activities.MainPageActivity">-->

    <FrameLayout
        android:id="@+id/main_LAY_mainWindow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/main_LAY_toolbar"
        android:layout_alignParentTop="true">


    </FrameLayout>

    <FrameLayout
        android:id="@+id/main_LAY_seperateToolbar"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        android:layout_above="@+id/main_LAY_toolbar"
        />

    <LinearLayout
        android:id="@+id/main_LAY_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5"
        android:padding="5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/lightest_gray">

        <ImageView
            android:id="@+id/main_BTN_profile"
            android:layout_width="0dp"
            android:layout_height="34dp"
            android:padding="3dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@drawable/toolbar_img_library_unfocused"
            />

        <ImageView
            android:id="@+id/main_BTN_chat"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:padding="3dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/toolbar_img_chat_unfocused"
            />
        <!--        android:src="@drawable/toolbar_img_chat"-->

        <ImageView
            android:id="@+id/main_BTN_addBook"
            android:layout_width="0dp"
            android:layout_height="31dp"
            android:padding="3dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/toolbar_img_addbook"
            />

        <ImageView
            android:id="@+id/main_BTN_search"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:padding="3dp"
            android:layout_marginTop="1dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@drawable/toolbar_img_search_unfocused"
            />


        <ImageView
            android:id="@+id/main_BTN_map"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:padding="3dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@drawable/toolbar_img_map_unfocused"
            />

    </LinearLayout>

</RelativeLayout>


